export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && source "$NVM_DIR/nvm.sh"
# Use the project's Node version from .nvmrc if available
[ -f .nvmrc ] && nvm use --silent || true

# Ensure nvm node is prioritized in PATH for this directory session
export PATH="$NVM_DIR/versions/node/$(nvm current 2>/dev/null)/bin:$PATH"
